{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "ES2019.Array"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": false,
    "pretty": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "types": [
      "@midwayjs/typegoose",
      "@midwayjs/core",
      "@midwayjs/koa",
      "@midwayjs/decorator",
      "types-uart",
      "@typegoose/typegoose"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}